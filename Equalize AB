import java.io.*; // for handling input/output
import java.util.*; // contains Collections framework
class Main {
        public static void main (String[] args) {
        // Your code here
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        int x=sc.nextInt();
        int c=Math.abs(a-b);

        if(c %(2*x) == 0){
            System.out.println("Yes");
        }
        else{
            System.out.println("No"); 
        }
           
    }
}
