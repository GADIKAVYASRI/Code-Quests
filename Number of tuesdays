import java.util.*;
import java.lang.*;
import java.io.*;
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
    Scanner s=new Scanner(System.in);
    int t=s.nextInt();
    while(t-->0){
      int n=s.nextInt();
      int ans=0;
      if(n<2){
      System.out.println("0");
      }
      else
      {
      for(int i=2;i<=n;i+=7){
          ans++;
      }
     System.out.println(ans); 
      }
    }
  }
}
